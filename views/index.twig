{% extends "layout.twig" %}

{% block content %}
  <section>
    <h1>Latest Posts</h1>
    {% if posts %}
      <ul>
        {% for post in posts %}
          <li>
            <a href="{{ post.url }}">{{ post.title }}</a>
          </li>
        {% endfor %}
      </ul>
    {% else %}
      <p>No posts found.</p>
    {% endif %}
  </section>
{% endblock %}
